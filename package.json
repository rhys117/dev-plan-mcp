{
  "name": "mcp-plan-server",
  "version": "1.0.0",
  "description": "MCP server for managing development plans in .llms directory",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run copy-assets && tsc",
    "copy-assets": "cp -r src/prompts dist/ && cp -r src/agents dist/ && cp -r src/slash-commands dist/",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "init": "tsx src/cli.ts init",
    "test": "node --test tests/*.test.js",
    "test:watch": "node --test --watch tests/*.test.js"
  },
  "bin": {
    "mcp-plan-init": "dist/cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  }
}
